<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.detail.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_habitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habit Name"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_habitCats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_habitName"
            app:layout_constraintStart_toStartOf="@id/tv_habitName"
            app:layout_constraintEnd_toEndOf="@id/tv_habitName"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"
            app:dividerColor="@color/black"
            app:dividerThickness="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_habitCats"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_startDateTime_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start Date/Time"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/divider_dateTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_endDateTime_title"/>

        <TextView
            android:id="@+id/tv_startDateTime_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="31/01/22, 13:00"
            app:drawableStartCompat="@drawable/calendar_ic_20"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_startDateTime_title"
            app:layout_constraintStart_toStartOf="@id/tv_startDateTime_title"
            app:layout_constraintEnd_toEndOf="@id/tv_startDateTime_title"/>

        <TextView
            android:id="@+id/tv_endDateTime_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Due Date/Time"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider_dateTime"
            app:layout_constraintStart_toEndOf="@id/tv_startDateTime_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_endDateTime_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="31/01/23, 13:00"
            app:drawableStartCompat="@drawable/calendar_ic_20"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_endDateTime_title"
            app:layout_constraintStart_toStartOf="@id/tv_endDateTime_title"
            app:layout_constraintEnd_toEndOf="@id/tv_endDateTime_title"/>

        <TextView
            android:id="@+id/tv_reminder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminder"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_startDateTime_value"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_reminder_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Every Mon, Tue, Wed, Thu, Fri on 14:00"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_reminder_title"
            app:layout_constraintStart_toStartOf="@id/tv_reminder_title"
            app:layout_constraintEnd_toEndOf="@id/tv_reminder_title"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"
            app:dividerColor="@color/black"
            app:dividerThickness="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_reminder_value"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_desc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider_desc"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_desc_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec mattis dolor nec velit bibendum ultrices. In nec finibus metus. Nunc ipsum sem, volutpat id consectetur sed, tempor ac tortor. Sed volutpat tincidunt lectus, sit amet ullamcorper nisi egestas vel. Quisque posuere interdum mollis. Nam non libero viverra, auctor mi sed, tempor ex. Nam in est id augue ullamcorper dapibus. Ut sed mollis velit, eget tincidunt dui. Cras at ultrices lectus. Cras porta sollicitudin velit, sed consectetur dui pharetra vitae. Nam ac vehicula quam. Nulla fringilla enim et semper venenatis. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Praesent tristique suscipit sem, ut accumsan arcu ornare eget."
            android:maxLines="10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_title"
            app:layout_constraintStart_toStartOf="@id/tv_desc_title"
            app:layout_constraintEnd_toEndOf="@id/tv_desc_title"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"
            app:dividerColor="@color/black"
            app:dividerThickness="1dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_value"
            app:layout_constraintBottom_toTopOf="@id/tv_target_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_target_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Progress"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_layout_targetNum"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_targetMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="40sp"
            android:paddingVertical="12dp"
            android:layout_marginStart="60sp"
            android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_layout_targetNum"
            app:layout_constraintBottom_toTopOf="@id/btn_doneHabit"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_layout_targetNum"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/btn_targetMinus"
            app:layout_constraintEnd_toStartOf="@id/btn_targetPlus"
            app:layout_constraintBottom_toTopOf="@id/btn_doneHabit">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_targetNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_targetPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="40sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toEndOf="@id/et_layout_targetNum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_doneHabit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_doneHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="18sp"
            android:padding="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_actionHabit"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_actionHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_end_habit"
            android:textSize="18sp"
            android:padding="24dp"
            android:backgroundTint="#9F1006"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>